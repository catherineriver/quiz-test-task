.button {
	display: inline-block;

	box-sizing: border-box;
	margin: 0;
	padding: 0;

	cursor: pointer;
	user-select: none;
	text-align: center;
	white-space: nowrap;

	border: 0;
	outline: none;
	background-color: transparent;

	font-family: $primaryFont;
	line-height: 1.42857;

	appearance: none;
	z-index: 1;
}

.button[disabled],
.button[disabled]:hover {
	cursor: default;
	pointer-events: none;

	opacity: 0.5;
	box-shadow: none;
}

// SIZES

.button--small {
	min-width: 114px;
	height: 40px;
	padding: 0 14px;

	text-align: center;

	border-radius: 3px;

	font-size: 13px;
	font-weight: 700;
}

.button--medium {
	min-width: 146px;
	height: 56px;
	padding: 0 15px;

	border-radius: 2px;

	font-size: 20px;
	font-weight: 700;
	line-height: 56px;
}


//  THEMES

.button--action {
	color: #000;
	border-radius: 2px;
	background-color: #fff;
	box-shadow: 0 15px 22px 0 rgba(121, 54, 68, 0.23);
	transition: background-color 150ms, color 150ms;

}

.button--action:hover {
	color: #fff;
	background-color: #000;
	transition: background-color 150ms, color 150ms;
}

.button--transparent {
	display: flex;
	align-items: center;

	max-width: 200px;
	height: 27px;
	padding: 0;

	text-align: left;

	color: #000;

	font-size: 20px;
	font-weight: bold;
	line-height: 27px;
}

