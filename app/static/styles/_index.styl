body {
	display: flex;
	flex-flow: column nowrap;

	min-height: 100vh;
	padding: 0;

	font-family: $primaryFont;
	font-size: 16px;
	font-weight: normal;
	line-height: 19px;

	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

	@media mobile {
		font-size: 24px;
		line-height: 32px;
	}
}

a {
	text-decoration: none;

	color: #000;
}

a:hover {
	color: $link-color-hover;
}

*,
*::before,
*::after {
	box-sizing: border-box;
}
